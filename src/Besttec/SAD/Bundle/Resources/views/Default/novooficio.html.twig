{% extends "::base.html.twig"%}

{% block stylesheets %}
    {{parent()}}
    <link type="text/css" rel="stylesheet" href="{{asset("css/datepicker.css")}}"/>
{% endblock %}

{% block body %}
    <body>
    <div id="container" class="container">
        <div class="row clearfix">
            <legend style="margin-bottom: 20px;">Cadastro de Ofício</legend>
            <div class="col-md-6 column">
                <form class="form-type" role="form">
                    <div class="form-group form-group-lg">
                        <label class="col-sm-10 control-label" for="codigo_oficio">C. do Ofício</label>
                        <div class="col-sm-3">
                            <input class="form-control" type="text" id="codigo_oficio" placeholder="C. do Ofício">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label style="margin-top: 10px;" class="col-sm-10 control-label" for="data">Data</label>
                        <div class="col-sm-5">
                            <input class="form-control datepicker" type="text" id="data" placeholder="Data">
                        </div>
                    </div>
                    <div class="form-group form-group-sm">
                        <label style="margin-top: 10px;" class="col-sm-10 control-label" for="para_quem">Para quem</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="para_quem" placeholder="Para quem">
                        </div>
                    </div>
                    <div class="form-group form-group-lg">
                        <label style="margin-top: 10px;" class="col-sm-10 control-label" for="de_quem">De quem</label>
                        <div class="col-sm-10">
                            <input class="form-control" type="text" id="de_quem" placeholder="De quem">
                        </div>
                    </div>
                    <div class="form-group form-group-lg">
                        <label style="margin-top: 10px;" class="col-sm-10 control-label" for="descricao">Descrição</label>
                        <div class="col-sm-10">
                            <textarea  cols="130" id="descricao" rows="10" placeholder="Descrição"></textarea>
                        </div>
                    </div>
                    <div class="form-group form-group-lg">
                        <div class="col-sm-10">
                            <button style="margin-top: 10px;" id="gerar_oficio" type="button" class="btn btn-primary">Gerar Ofício</button>
                            <button style="margin-top: 10px;" id="finalizar" type="submit" class="btn btn-primary">Finalizar</button>
                        </div>
                    </div>

                </form>
            </div>
            <div class="col-md-4 column">
            </div>
        </div>
    </div>
    </body>
{% endblock %}

{% block javascripts %}
    {{parent()}}
    <script type="text/javascript" src="{{asset("js/bootstrap-datepicker.js")}}" ></script>
    <script type="text/javascript" src="{{asset("bundles/besttecsad/js/sadjs.js")}}" ></script>
    <script type="text/javascript">
    $('.datepicker').datepicker();
    
    var urls = {
        url: '{{ path('geraroficio') }}'
    };
  
    jQuery('body').rotas(urls);

    </script>
{%endblock%}